{
    "name": "@markslides/renderer",
    "description": "MarkSlides Renderer",
    "version": "0.1.55",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "keywords": [
        "markdown",
        "markdown-renderer",
        "slides",
        "markdown-presentation"
    ],
    "author": "Soaple <inje@soaple.io>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/markslides/markslides.git"
    },
    "bugs": {
        "url": "https://github.com/markslides/markslides/issues"
    },
    "homepage": "https://github.com/markslides/markslides/tree/main/packages/renderer#readme",
    "scripts": {
        "lint": "eslint . --max-warnings 0",
        "generate:component": "turbo gen react-component",
        "dev": "npm run build -- --watch",
        "build": "tsup ./src/index.ts --format cjs,esm --dts",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        }
    },
    "peerDependencies": {
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "react": "^18.2.0"
    },
    "devDependencies": {
        "@repo/eslint-config": "*",
        "@repo/typescript-config": "*",
        "@turbo/gen": "^1.10.12",
        "@types/eslint": "^8.44.7",
        "@types/jest": "^30.0.0",
        "@types/markdown-it": "^13.0.7",
        "@types/markdown-it-container": "^2.0.9",
        "@types/node": "^20.5.2",
        "eslint": "^8.53.0",
        "jest": "^30.2.0",
        "ts-jest": "^29.4.4",
        "tsup": "^8.0.1",
        "typescript": "^5.9.2"
    },
    "dependencies": {
        "@markslides/markdown-it-link": "^0.1.1",
        "@markslides/markdown-it-mermaid": "^0.4.3",
        "@markslides/markdown-it-typograms": "^0.1.2",
        "@markslides/themes": "^0.1.9",
        "@marp-team/marp-core": "^3.9.0",
        "@marp-team/marpit": "^2.6.1",
        "markdown-it": "^14.0.0",
        "markdown-it-container": "^4.0.0"
    }
}
